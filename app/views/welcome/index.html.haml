.row
  .span7.align_right
    = image_tag 'logo.png'
    %h4 Show Your Bidding Skill
.row
  .span7.sign_up_form
    .well
      = simple_form_for @user, url: user_session_path, html: {class: 'form-horizontal sign_in_form'} do |f|
        = f.input :username, label: 'Twitter Handler', input_html: {class: 'span4'}
        = f.submit 'Proceed to Game', class: 'btn btn-primary' 
    .tabbable.hide
      %ul.nav.nav-tabs
        %li.active.sign_in= link_to 'Sign In', '#tab1', data: { toggle: 'tab'}
        %li.sign_up= link_to 'Sign Up', '#tab2', data: {toggle: 'tab'}
      .tab-content
        .tab-pane.active{id: 'tab1'}
          = simple_form_for @user, url: user_session_path, html: {class: 'form-horizontal sign_in_form'} do |f|
            = f.input :username
            = f.input :password
            = f.submit 'Sign In', class: 'btn btn-primary'
        .tab-pane{id: 'tab2'}
          = simple_form_for @user, url: registration_path(@user), html: {class: 'form-horizontal sign_up_form_home'} do |f|
            = f.input :username
            = f.input :password
            = f.input :password_confirmation
            = f.submit 'Sign Up', class: 'btn btn-primary'
  .span3.guest_form
    = simple_form_for @user, url: user_session_path do |f|
      = f.hidden_field :username, value: 'guest'
      = f.hidden_field :password, value: 'guest123'
      = f.submit 'Try as Guest', class: 'btn btn-large btn-primary'
